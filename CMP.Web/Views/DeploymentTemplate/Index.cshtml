@model IEnumerable<CMP.Core.Models.DeploymentTemplate>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<main role="main">

    <section class="jumbotron text-center">
        <div class="container">
            <h1 class="jumbotron-heading">Album example</h1>
            <p class="lead text-muted">Something short and leading about the collection below—its contents, the creator, etc. Make it short and sweet, but not too short so folks don't simply skip over it entirely.</p>
            <p>
                <a href="#" class="btn btn-primary my-2">Main call to action</a>
                <a href="#" class="btn btn-secondary my-2">Secondary action</a>
            </p>
        </div>
    </section>

    <div class="album py-5 bg-light">
        <div class="container">

            <div class="row">
                @using (Html.BeginForm("View", "DeploymentTemplate", FormMethod.Get))
                {                                    
                    @foreach (var item in Model)
                    {
                        <div class="col-md-4">
                            <div class="card mb-4 box-shadow">
                                
                                <img class="card-img-top" src="~/images/thumbnail.png" alt="Card image cap">
                                <div class="card-body">
                                    <p class="card-text">@Html.DisplayFor(modelItem => item.Name)</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="btn-group">
                                            @Html.ActionLink("View", "View", new { id=item.Id }, new {@class="btn btn-sm btn-outline-secondary"})                                                                                    
                                        </div>
                                        <small class="text-muted">9 mins</small>
                                    </div>
                                </div>
                            </div>
                        </div>                    
                    }
                }
            </div>
        </div>
    </div>
</main>
